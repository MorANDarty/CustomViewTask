<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:"
            android:textSize="33sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_1"
    />

    <EditText
            android:layout_width="40dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_1"
            app:layout_constraintTop_toTopOf="@id/tv_1"
            android:id="@+id/et_1"
            android:inputType="number"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:"
            android:textSize="33sp"
            app:layout_constraintLeft_toRightOf="@id/et_1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_2"
    />

    <EditText
            android:layout_width="40dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_2"
            app:layout_constraintTop_toTopOf="@id/tv_2"
            android:id="@+id/et_2"
            android:inputType="number"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:"
            android:textSize="33sp"
            app:layout_constraintLeft_toRightOf="@id/et_2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_3"
    />

    <EditText
            android:layout_width="40dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_3"
            app:layout_constraintTop_toTopOf="@id/tv_3"
            android:id="@+id/et_3"
            android:inputType="number"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:"
            android:textSize="33sp"
            app:layout_constraintLeft_toRightOf="@id/et_3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_4"
    />

    <EditText
            android:layout_width="40dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_4"
            app:layout_constraintTop_toTopOf="@id/tv_4"
            android:id="@+id/et_4"
            android:inputType="number"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ok"
            app:layout_constraintLeft_toRightOf="@+id/et_4"
            app:layout_constraintBottom_toBottomOf="@+id/et_4"
            android:layout_marginLeft="10dp"
            android:text="Go"/>

    <com.sputnik.customviewtask.GraphCustomView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spaceBetweenValues="30dp"
            android:id="@+id/custom_view"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/et_2"
            android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>